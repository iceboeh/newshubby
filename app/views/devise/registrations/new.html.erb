<% @nhBkg = true %>

<%= devise_error_messages! %>

<div class="shortPage">
<div class="container navMargin">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
			<small><span class="pull-right">Already a member? <%= link_to "Log in here", new_newsroom_session_path %></small><br>
			<div class="panel panel-body">
				<h4>Sign up</h4>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					<div class="form-group">
						<label for="inputEmail1">Email address</label>
						<%= f.email_field :email, autofocus: true, class: "form-control", id: "signUpEmail", placeholder: "Email" %>
					</div>
					<div class="form-group">
						<label for="inputPassword1">Password</label>
						<%= f.password_field :password, autocomplete: "off", class: "form-control", id: "signUpPassword1", placeholder: "Password" %>
					</div>
					<div class="form-group">
						<label for="inputPassword2">Confirm Password</label>
						<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "signUpPassword1", placeholder: "Confirm password" %>
					</div>
					<div class="checkbox">
						<label>
							<%= f.check_box :term_agreement %><small>I have read and agree to our <%= link_to "terms and conditions", terms_of_service_path, target: "_blank" %></small>.
						</label>
					</div>
					<%= f.submit "Sign up", class: "btn btn-primary center-block" %>
				<% end %>
			</div>
		</div> <!-- / .col -->
	</div> <!-- /.row -->
</div> <!-- / .container -->
<div class="push"></div>
</div> <!-- / .shortPage -->