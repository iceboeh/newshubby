<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<br>
			<h4>Latest Press Releases</h4>
			<hr class="header-hr">
		</div>
	</div>
	<div class="row">
<div class="masonry-container" class="transitions-enabled infinite-scroll clearfix has-gutters">

		<% @press_releases.each do |press_release| %>
		<div class="col-sm-6 col-md-4 col-lg-3 brick">
			<div class="thumbnail">
				<% unless press_release.uploads.first.nil? %>
				<%= link_to newsroom_press_release_path(press_release.newsroom, press_release) do %>
					<%= image_tag press_release.uploads.first.file.url(:medium), class: "img-responsive", alt: "" %><% end %>
				<% end %>

				<div class="caption">
					<time class="pull-right text-muted clearfix" datetime="2014-10-28 20:00">
						<small>
							<%= time_ago_in_words(press_release.embargo) %>
						</small>
					</time>
					<%= link_to newsroom_press_release_path(press_release.newsroom, press_release) do %>
						<h4>
							<%= press_release.title %>
						</h4>
					<% end %>

					<!-- <p class="fade-out">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laborum dolor cumque, tempora voluptas...</p> -->
				</div>
				<%= link_to press_release.newsroom do %>
					<%= image_tag press_release.newsroom.logo.url(:thumb), class: "thumbnail-logotype clearfix" %>
				<% end %>
				
			</div>
		</div>
		<% end %>					

	</div>

	<div class="text-center"><%= will_paginate @press_releases %></div>

		<!--<div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
		<%= link_to "More Press Releases", pressreleases_path, class: "btn btn-default center-block", role: "button" %><br>-->
	</div>
	</div>
</div> <!-- / .container -->