<% title "Select Press Release Type" %>

<div class="shortPage">

<% if @newsroom == current_newsroom %>

<div class="container">

<div class="row">

<div class="col-sm-12">
			<%= link_to "Write a press release from scratch", "#{request.protocol}#{request.host_with_port}/#{current_newsroom.slug}/pressreleases/new?pressrelease_type_id=#{@manual.id}", class: "btn btn-default center-block pull-right" %>
	</div>
</div>
<br>

<div class="row">
	
	<h2 class="text-center">What are you announcing?</h2>
	
<% @press_release_types.each do |pressrelease_type| %>

	<div class="col-sm-3">
		<%= link_to "#{request.protocol}#{request.host_with_port}/#{current_newsroom.slug}/pressreleases/new?pressrelease_type_id=#{pressrelease_type.id}", class: "template-type" do %>

	<div class="panel text-center">
		<div class="panel-body">
			<h4><%= pressrelease_type.name %></h4>
			<%= image_tag "press_release_types/#{pressrelease_type.name.parameterize("_")}.png", class: "img-responsive" %>
			<!--
			Company launch: <p>For when you are launching a company</p>
			Feature launch: <p>For when your company is launching a new feature</p>
			Manual: <p>For when you already have your own content</p>
			New market: For when your company is entering new markets
			New location: For when opening up your business in a new location
			Pivot: For when doing a pivot that changes your roadmap
			Funding: For when your company gets funded
			Parternerships: For when your company is partnering up with others
			-->
		</div>
		</div>
		<% end %>
	</div>

<% end %>
<% end %>

<div class="col-sm-3">
	<div class="panel text-center">
		<div class="panel-body">
			<h4>Product Launch</h4>
			<%= image_tag "press_release_types/product_launch.png", class: "img-responsive img-muted" %>
			<%= link_to "Coming soon", "#", class: "btn btn-default omnes center-block", disabled: "disabled" %>	
			</div>		
		</div>
	</div>

<div class="col-sm-3">
	<div class="panel text-center">
		<div class="panel-body">
			<h4>User Metrics</h4>
			<%= image_tag "press_release_types/user_metrics.png", class: "img-responsive img-muted" %>
				
			<%= link_to "Coming soon", "#", class: "btn btn-default omnes center-block", disabled: "disabled" %>	
			</div>		
		</div>
	</div>

<div class="col-sm-3">
	<div class="panel">
		<div class="panel-body text-center">
			<h4>Financial Metrics</h4>
			<%= image_tag "press_release_types/financial_metrics.png", class: "img-responsive img-muted" %>
				
			<%= link_to "Coming soon", "#", class: "btn btn-default omnes center-block", disabled: "disabled" %>	
			</div>			
		</div>
	</div>

<div class="col-sm-3">
	<div class="panel text-center">
		<div class="panel-body">
			<h4>New location</h4>
			<%= image_tag "press_release_types/new_location.png", class: "img-responsive img-muted" %>
				
			<%= link_to "Coming soon", "#", class: "btn btn-default omnes center-block", disabled: "disabled" %>	
			</div>			
		</div>
	</div>


<div class="col-sm-3">
	<div class="panel text-center">
		<div class="panel-body">
			<h4>Pivot</h4>
			<%= image_tag "press_release_types/pivot.png", class: "img-responsive img-muted" %>
				
			<%= link_to "Coming soon", "#", class: "btn btn-default omnes center-block", disabled: "disabled" %>	
			</div>			
		</div>
	</div>

</div>
</div>
</div>
<div class="push"></div>
</div>

<script>
	mixpanel.track("Select Press Release");
	mixpanel.identify("<%= current_newsroom.email unless current_newsroom.blank? %>");
	mixpanel.people.set({
	   	"$email": "<%= current_newsroom.email unless current_newsroom.blank? %>",
			"$name": "<%= current_newsroom.company_name unless current_newsroom.blank? %>"
	});
</script>